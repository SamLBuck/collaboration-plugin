{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSources": true,
    "inlineSourceMap": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,             
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["obsidian", "node"], // <--- Crucial line for Obsidian types
    "paths": {
      "obsidian": [
        "node_modules/obsidian"
      ]
    }
  },
  "include": [
    "src/**/*",
    "index.ts",
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}