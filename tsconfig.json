{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "target": "ES2020",
    "types": ["node"],
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "**/*.ts"
, "networking/socket/server.ts"  ]
}
